<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.midnear.midnearshopping.mapper.notice.NoticeMapper">
    <insert id="createNotice" parameterType="com.midnear.midnearshopping.domain.vo.NoticeVo">
        INSERT INTO notices (
        title, content, created_date
        ) VALUES (
        #{title}, #{content}, NOW()
        )
    </insert>
    <select id="findNoticeById" parameterType="int" resultType="com.midnear.midnearshopping.domain.vo.NoticeVo">
        SELECT * FROM notices
        WHERE notice_id = #{noticeId}
    </select>
    <update id="updateNotice" parameterType="com.midnear.midnearshopping.domain.vo.NoticeVo">
        UPDATE notices
        SET
            title = #{title},
            content = #{content},
            created_date = NOW()
        WHERE notice_id = #{noticeId}
    </update>
    <delete id="deleteNotices" parameterType="java.util.List">
        DELETE FROM notices
        WHERE notice_id IN
        <foreach item="id" collection="noticeList" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    <select id="getFixedNotices" resultType="com.midnear.midnearshopping.domain.vo.NoticeVo">
        SELECT * FROM notices
        WHERE fix = TRUE;
    </select>
    <select id="getNotices" resultType="com.midnear.midnearshopping.domain.vo.NoticeVo">
        SELECT * FROM notices
        WHERE fix = FALSE;
    </select>
    <update id="fixNotices" parameterType="java.util.List">
        UPDATE notices
        SET
        fix = true
        WHERE notice_id IN
        <foreach item="id" collection="noticeList" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>
    <update id="unfixNotices" parameterType="java.util.List">
        UPDATE notices
        SET
        fix = false
        WHERE notice_id IN
        <foreach item="id" collection="noticeList" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>
</mapper>