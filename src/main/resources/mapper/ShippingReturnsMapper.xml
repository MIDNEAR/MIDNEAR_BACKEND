<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.midnear.midnearshopping.mapper.ShippingReturns.ShippingReturnsMapper">
    <select id="getShippingReturns" resultType="ShippingReturnsVo">
        SELECT * FROM shipping_returns
        LIMIT 1
    </select>
    <update id="updateShippingReturns">
        UPDATE shipping_returns
        SET
        shipping_info = #{shippingInfo},
        shipping_notice = #{shippingNotice}
        WHERE id = #{id}
    </update>
    <update id="updateShippingPolicy">
        UPDATE shipping_returns
        SET
        shipping_returns_policy = #{shippingReturnsPolicy}
        WHERE id = #{id}
    </update>
</mapper>